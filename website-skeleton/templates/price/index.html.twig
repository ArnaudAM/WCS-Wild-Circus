{% extends 'base.html.twig' %}

{% block title %}Price index{% endblock %}

{% block body %}
    <h1>Price index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Person</th>
                <th>Price_week</th>
                <th>Price_wednesday</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for price in prices %}
            <tr>
                <td>{{ price.id }}</td>
                <td>{{ price.person }}</td>
                <td>{{ price.priceWeek }}</td>
                <td>{{ price.priceWednesday }}</td>
                <td>
                    <a href="{{ path('price_show', {'id': price.id}) }}">show</a>
                    <a href="{{ path('price_edit', {'id': price.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('price_new') }}">Create new</a>
{% endblock %}
